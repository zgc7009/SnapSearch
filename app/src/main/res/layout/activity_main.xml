<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/wrapper_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <LinearLayout
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/input_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:orientation="vertical" >

            <com.happycamp.snapsearch.custom_views.edit_text.CustomEditText
                android:id="@+id/edit_text_image_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Image URL"
                android:background="@drawable/rounded_button"
                custom:backgroundColor="@android:color/white" />

            <com.happycamp.snapsearch.custom_views.color_button.ColorButton
                android:id="@+id/search"
                android:text="Search by URL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                custom:unclickColor="@color/light_blue"
                custom:clickColor="@color/gray"/>

            <com.happycamp.snapsearch.custom_views.color_button.ColorButton
                android:id="@+id/image"
                android:text="Search by Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                custom:unclickColor="@color/light_blue"
                custom:clickColor="@color/gray" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_search_results"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/input_fields"
            android:animateLayoutChanges="true"/>
    </LinearLayout>

    <com.happycamp.snapsearch.custom_views.web_view.SnapSearchWebView
        android:id="@+id/my_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
